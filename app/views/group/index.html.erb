<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Icon</th>
      <th>Name</th>
    </tr>
  </thead>

<tbody>
  <% @groups.each do |g| %>
    <%= link_to root_path do %>
      <tr>
        <td>
          <i class="<%= "fas fa-#{g.icon}" %>"></i>
        </td>
        <td><%= g.name %></td>        
      </tr>
    <% end %>
  <% end %>
</tbody>

</table>


<br>

  <% @groups.each do |g| %>
    
    <%= link_to group_path(g) do %>
      <div class="d-flex gap-4" >        
        <i class="<%= "fas fa-#{g.icon}" %>"></i>        
        <div><%= g.name %></div>  
        <h4> <%= g.created_at%>  </h4>      
        <h4> $<%= g.amount%>  </h4>      
      </div> 
    <% end %>
  <% end %>


<br>

<%= link_to 'New Category', new_group_path %>
