<h1>Add a Transaction</h1>

<%= form_with(model: @transaction, url: transactions_path, method: :post) do |form| %>
  <div class="field">
    <%= form.label :description, 'Description' %>
    <%= form.text_field :description, required: true %>
  </div>

  <div class="field">
    <%= form.label :amount, 'Amount' %>
    <%= form.number_field :amount, required: true %>
  </div>

  <!-- Add other fields as needed -->

  <div class="actions">
    <%= form.submit 'Add Transaction', class: 'btn btn-success' %>
  </div>
<% end %>
